<% layout('base') -%>
<% block('title', 'Playlist') %>
<% stylesheet('public/css/favourite.css') -%>

<!-- Bands list -->

<div class="container">
	<div class="row">

		<div class="col-md-10 col-lg-10 col-sm-10 col-xs-10">
			<ul class="list-group" id="songlist">
			</ul>
		</div>
		
		<div class="col-md-2 col-lg-2 col-sm-2 col-xs-2">
			<ul class="list-group" id="deletelist">
			</ul>
		</div>

	</div>
</div>

<!-- Modal window -->

<div id="myModal" class="modal fade" role="dialog">
	<div class="modal-dialog">

		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<button type="button" class="btn btn-info btn-sm" onclick="play()" id="aud">Прослушать</button>
				<audio controls id="player" hidden>Аудио не поддерживается вашим браузером</audio>
			</div>
			<div class="modal-body">
				<pre id="words">words</pre>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-info" data-dismiss="modal">Закрыть</button>
			</div>
		</div>

	</div>
</div>

<% script('/public/js/favourite.js') -%>